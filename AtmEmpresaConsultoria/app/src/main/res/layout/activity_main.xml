<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="curso.empresaconsultoria.atm.com.atmempresaconsultoria.MainActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/empresasID"
        android:background="@drawable/menu_empresa"
        android:layout_alignTop="@+id/servicosID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/servicosID"
        android:background="@drawable/menu_servico"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/clientesID"
        android:layout_marginTop="32dp"
        android:background="@drawable/menu_cliente"
        android:layout_below="@+id/empresasID"
        android:layout_alignLeft="@+id/empresasID"
        android:layout_alignStart="@+id/empresasID" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/contatosID"
        android:layout_alignTop="@+id/clientesID"
        android:layout_alignRight="@+id/servicosID"
        android:layout_alignEnd="@+id/servicosID"
        android:background="@drawable/menu_contato" />
</RelativeLayout>
